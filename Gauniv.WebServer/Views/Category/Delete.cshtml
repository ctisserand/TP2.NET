@model Gauniv.WebServer.Data.Game.Category

@{
    ViewData["Title"] = "Supprimer la catégorie";
}

<h1>Supprimer la catégorie</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette catégorie ?</h3>
<div>
    <h4>@Model.Name</h4>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
